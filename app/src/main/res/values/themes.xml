<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Team_match" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>
        <item name="android:windowBackground">@color/app_background</item>
        <!-- Customize your theme here. -->

        <!-- 상단 Title 배경색 -->
        <item name="colorAccent">@color/app_background</item>
        <!-- 선택한 날짜 배경 색 -->
        <item name="colorControlActivated">@color/app_background</item>
    </style>
</resources>